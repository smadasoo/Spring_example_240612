<mapper namespace="com.example.lesson04.mapper.UserMapper">
	<insert id="insertUser" parameterType="map">
		INSERT INTO `new_user`
		(
			`name`
			,`yyyymmdd`
			,`introduce`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{name}
			, #{yyyymmdd}
			, #{introduce}
			, #{email}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectLatestUser" resultType="com.example.lesson04.domain.User">
		SELECT
			`id`
			,`name`
			,`yyyymmdd`
			,`introduce`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_user`
		ORDER BY `id` DESC
		LIMIT 1
	</select>
</mapper>